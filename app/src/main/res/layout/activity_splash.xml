<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/putih"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/dm110"
        android:layout_height="@dimen/dm110"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:src="@drawable/logo"
        app:srcCompat="@drawable/logo"/>

    <TextView
        android:id="@+id/teks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/item"
        android:layout_below="@id/logo"
        android:padding="30dp"/>
    
    <ProgressBar
        android:id="@+id/progres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:indeterminateTint="@color/item"/>

    <TextView
        android:id="@+id/teks2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progres"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:padding="15dp"
        android:text="Designed by Devi Supriyadi"
        android:textColor="@color/item"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

</LinearLayout>